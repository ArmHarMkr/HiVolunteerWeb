@using HiVolunteerWeb.Entities
@model VolunteeringEntity

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Volunteering Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        .card {
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #ddd;
        }

        .card-title {
            margin: 0;
        }

        .card-body p {
            margin: 0.5rem 0;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">@Model.VolunteeringName</h2>
                <small class="text-muted">@Model.CreatedDate.ToString("yyyy-MM-dd")</small>
            </div>
            <div class="card-body">
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Address:</strong> @Model.Address</p>
                <p><strong>Volunteering Date:</strong> @Model.VolunteeringDate.ToString("yyyy-MM-dd")</p>
                <p><strong>Deadline Date:</strong> @Model.DeadLineDate.ToString("yyyy-MM-dd")</p>
                <p><strong>Is Needed Accept:</strong> @(Model.IsNeededAccept ? "Yes" : "No")</p>
                <p><strong>Is Food Available:</strong> @(Model.IsFoodAvailable ? "Yes" : "No")</p>
                <p><strong>Is Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
                <p><strong>Registered Users:</strong></p>
                <ul>
                    @foreach (var user in Model.RegisteredUsers)
                    {
                        <li>@user.FullName</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>